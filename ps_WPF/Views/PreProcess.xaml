    Title="PreProcess">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="グリッド表示対象選択" Grid.Column="0"  Grid.Row="0" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <Button Content="CSVファイルを開く" Grid.Column="1"  Grid.Row="0" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" x:Name="ogv_fs_btn" VerticalAlignment="Top" Width="256" />
        <Button x:Name="ogv" Content="実行" Grid.ColumnSpan="2" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" />
    </Grid>
