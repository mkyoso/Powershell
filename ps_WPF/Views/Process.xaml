<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Process">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="比較元ファイル" Grid.Column="0"  Grid.Row="0" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <Button Content="ファイルを開く" Grid.Column="1"  Grid.Row="0" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" x:Name="src_fs_btn" VerticalAlignment="Top" Width="256" />
        <Label Content="比較対象ファイル" Grid.Column="0" Grid.Row="1" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Right" />
        <Button Content="ファイルを開く"  Grid.Column="1" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" x:Name="dst_fs_btn" VerticalAlignment="Top" Width="256" />
        <Button x:Name="diffs" Content="実行" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" />
    </Grid>
</Page>